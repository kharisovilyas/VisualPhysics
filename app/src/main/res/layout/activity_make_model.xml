<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".MakeModelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_delete_sweep_24">

        </ImageView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="25"></View>

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_lock_24"></ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_add_box_24"></ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_play_arrow_24"></ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_pause_24"></ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="4dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Отключить Размеры">

        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Формулы">

        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="История">
        </Button>
    </LinearLayout>
</LinearLayout>